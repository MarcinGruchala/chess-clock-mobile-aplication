<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greenThemeLight">

    <ListPreference
        android:layout_width="0dp"
        android:defaultValue="10min"
        android:entries="@array/gameTime_entries"
        android:entryValues="@array/gameTime_values"
        android:icon="@drawable/ic_rapid"
        android:key="gameTime"
        android:title="Game time"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        android:icon="@drawable/ic_increment"
        android:defaultValue="0s"
        android:entries="@array/increment_entries"
        android:entryValues="@array/increment_values"
        android:key="gameTimeIncrement"
        android:title="Game time increment"
        app:useSimpleSummaryProvider="true"/>





</androidx.preference.PreferenceScreen>